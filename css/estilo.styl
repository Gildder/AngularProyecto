azul = #22BCE0
naranja = #DD4F24
gris_texto = #7A7A7A
gris_oscuro = #444
gris_claro = lighten(gris_oscuro,40%)

footer
	position relative
	background naranja
	color rgba(white,0.5)
	padding 1em
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block 

		.mejor
			&:before
			&:after
				content " - "
	
form
	label
		margin-right 20px	

header
	background black
	color white
	padding 1em
	margin 0px

	
	h1
		font-size 18px
		font-weight normal
		padding 0
		margin 0
	
	.logo figure
		border 0px dashed invert(gris_oscuro)
		height 52px
		width 52px
		

		img
			border-radius 50%
			width 52px
		
	.usuario
		.avatar
			border 0px dashed invert(gris_oscuro)
			border-radius 50%
			height 50px
			width 50px
	.row
		margin-right 15px
		margin-left 15px
		

nav
	background azul
	position relative

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

				&:hover
					background rgba(black,0.1)			

section
	padding 1.2em
	
	h2
		display block
	

		
	.menuOpciones
		display block
		margin-bottom 25px
		margin-top 5px
		position relative
		
		

		
@media (max-width: 768px) and (min-width: 540px)
	section
			
		h2
			display inline-block
			
		.menuOpciones
			top -100px
			margin-bottom 10px
			

@media screen and (min-width: 768px)	

	section
		
		h2
			display inline-block

		.menuOpciones
			top -100px
			margin-bottom 10px