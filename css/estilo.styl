azul = #22BCE0
naranja = #DD4F24
rojo_claro = #EC776E
gris_texto = #7A7A7A
gris_oscuro = #444
gris_claro = lighten(gris_oscuro,40%)
gris_blanco = #E8E8E8

body
	background gris_blanco
	
	input
		border-left 1px solid azul

footer
	background naranja
	color rgba(white,0.5)
	padding 1em
	padding 1em 0
	text-align center
	width 100%
	bottom 0

	h3
		font-size 14px
		font-weight normal

		strong
			display block 

		.mejor
			&:before
			&:after
				content " - "
	
form
	label
		margin-right 20px	

header
	background black
	color white
	padding 1em
	margin 0px

	.titular
		display inline-block
		margin-left 10px

	    .titulo
			font-size 24px
			font-weight normal
			margin 0
			padding 0
	
		.nick
			background naranja
			border-radius  0 5px 10px 0 
			color white
			font-weight bold
			padding 0.3em 0.4em
			position absolute
			right 10px
			text-decoration none
			text-shadow 1px 1px 0px black
			top 20px
			z-index 2
		
		.registrar
			border-radius 5px 0 0  10px
			color white
			font-weight bold
			padding 0.3em 0.4em
			position absolute
			right 82px
			text-decoration none
			text-shadow 1px 1px 0px black
			top 20px
			z-index 2
			
				
	.logo 
		display inline-block
		border 0px dashed invert(gris_oscuro)
		height 52px
		width 52px
		
		figure
			display inline-block
			
			img
				border-radius 50%
				width 52px
		
nav
	background gris_oscuro

	ul
		li
			
			&:hover
				background black	
				font-weight bold
				color azul		
	.navbar
		margin-bottom 5px
						

section
	padding 0

	.subtitulo
		display inline-block
		margin 0 0 5px 0
	
	.input-group
		width 100%
		
	.panel		
		padding 10px
		border-radius 10px
		height 320px
		
		.table
			height 160px
		
	.panel-default
		background white
		padding 10px 0 10px 0
		border-radius 5px
		margin 10px 0 10px 0
	
	.navegacion
		text-align center
	
	.page-header
		margin-top 20px
		margin-bottom 0px
	
	.inicio
		background white
		padding 10px
		
		.content
			height 100%
	.row
		padding 10px

		
		

		
@media (max-width: 768px) and (min-width: 540px)
	section
		padding 0

		.subtitulo
			display inline-block
			
		
		.input-group
			width 70%
		
		.panel		
			height 320px
		

@media screen and (min-width: 768px)	

	section
		padding 0
		
		.subtitulo
			display inline-block

			
		.input-group
			width 50%
		
		.panel-default
			height 300px

	footer
		position absolute
		bottom 0px
		